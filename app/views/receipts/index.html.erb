<div class="container mx-auto px-4 mt-20">
  <h1 class="text-4xl font-bold mb-4">Mis Recibos</h1>

  <%= link_to 'Nuevo Recibo', new_receipt_path, class: 'text-blue-500' %>

  <table class="table-auto w-full">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2">ID</th>
        <th class="px-4 py-2">Usuario</th>
        <th class="px-4 py-2">Fecha</th>
        <th class="px-4 py-2">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @receipts.each do |receipt| %>
        <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
          <td class="border px-4 py-2"><%= receipt.id %></td>
          <td class="border px-4 py-2"><%= receipt.user.email %></td>
          <td class="border px-4 py-2"><%= receipt.created_at.in_time_zone.to_s(:short) %></td>
          <td class="border px-4 py-2">
            <%= link_to 'Ver', receipt, class: 'text-blue-500' %>
            <%= link_to 'Editar', edit_receipt_path(receipt), class: 'text-blue-500' %>
            <%= link_to 'Eliminar', @receipt, method: :delete, data: { turbo_method: :delete }, class: 'text-red-500' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
